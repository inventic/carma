Name:                carma
Version:             0.1
Synopsis:            Project Synopsis Here
Description:         Project Description Here
License:             AllRightsReserved
Author:              Author
Maintainer:          maintainer@example.com
Stability:           Experimental
Category:            Web
Build-type:          Simple
Cabal-version:       >=1.6

Flag development
  Description: Whether to build the server in development (interpreted) mode
  Default: False

Executable carma
  hs-source-dirs: src
  main-is: Main.hs

  Other-modules:
    Application,
    ApplicationInit,
    ApplicationHandlers,
    Nominatim,
    CustomLogic.ActionAssignment,
    Snaplet.DbLayer,
    Snaplet.DbLayer.Indices,
    Snaplet.DbLayer.RedisCRUD,
    Snaplet.DbLayer.PostgresCRUD,
    Snaplet.DbLayer.ARC,
    Snaplet.DbLayer.RKC,
    Snaplet.DbLayer.Dictionary,
    Snaplet.DbLayer.Triggers,
    Snaplet.DbLayer.Triggers.Actions,
    Snaplet.DbLayer.Triggers.Defaults,
    Snaplet.DbLayer.Triggers.Dsl,
    Snaplet.DbLayer.Triggers.Types,
    Snaplet.DbLayer.Types,
    Snaplet.SiteConfig,
    Snaplet.SiteConfig.Class,
    Snaplet.SiteConfig.Dictionaries,
    Snaplet.SiteConfig.Types,
    Snaplet.SiteConfig.Models,
    Snaplet.SiteConfig.Permissions,
    Snaplet.FileUpload,
    Snap.Snaplet.Auth.Class,
    Utils.HttpErrors,
    Util,
    WebSockHandlers

  Build-depends:
    aeson                       == 0.6.*,
    attoparsec                  == 0.10.*,
    avaya-aes                   == 0.0.4,
    base                        >= 4 && < 5,
    configurator                == 0.2.*,
    containers                  == 0.4.*,
    bytestring                  >= 0.9.1 && < 0.10,
    data-lens-template          >= 2.1 && < 2.2,
    data-lens                   >= 2.0.1 && < 2.11,
    errors                      >= 1.2.1 && < 1.3,
    resource-pool-catchio       >= 0.2 && < 0.3,
    heist                       == 0.8.*,
    old-locale                  == 1.0.*,
    snap                        == 0.8.*,
    snap-core                   == 0.8.*,
    snap-server                 == 0.8.*,
    snaplet-redis               == 0.1.*,
    snaplet-simple-log  >= 0.1.2 && < 0.2,
    text                        >= 0.11 && < 0.12,
    time                        >= 1.1 && < 1.5,
    mtl                         == 2.0.*,
    stm                         == 2.3,
    transformers                >= 0.2 && < 0.4,
    MonadCatchIO-transformers   >= 0.2 && < 0.4,
    vin-parser                  >= 0.1.2 && < 0.2,
    hedis                       == 0.4.1,
    unordered-containers,
    utf8-string,
    easy-file                   == 0.1.*,
    network                     == 2.3.*,
    HTTP                        == 4000.2.*,
    postgresql-simple           == 0.1.*,
    snaplet-postgresql-simple   == 0.1,
    postgresql-sync-map         >= 0.1.3 && < 0.2,
    xlsx                        == 0.0.*,
    filepath                    == 1.3.0.*,
    directory                   == 1.1.0.*,
    bytestring                  == 0.9.2.*,
    weather-api                 == 0.2.*,
    fdds                        == 0.1,
    vector                      == 0.9.*,
    bytestring-lexing           == 0.4.*,
    websockets                  == 0.6.*,
    simple-log                  == 0.1.*

  Extensions:
    OverloadedStrings,
    RecordWildCards,
    NamedFieldPuns

  if flag(development)
    cpp-options: -DDEVELOPMENT
    -- In development mode, speed is already going to suffer, so skip
    -- the fancy optimization flags.  Additionally, disable all
    -- warnings.  The hint library doesn't give an option to execute
    -- compiled code when there were also warnings, so disabling
    -- warnings allows quicker workflow.
    ghc-options: -threaded -w
  else
      ghc-options: -threaded -Wall -fwarn-tabs -funbox-strict-fields -O2

